# API Gateway Environment Configuration

# Server
PORT=8080

# Redis Configuration
REDIS_URL=localhost:6379
REDIS_PASSWORD=

# PostgreSQL Configuration
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/archmind?sslmode=disable

# GitHub OAuth (for future implementation)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:8080/api/v1/auth/github/callback

# GitHub Webhooks
# Generate a secure secret: openssl rand -hex 32
# This must match the secret configured in your GitHub webhook settings
GITHUB_WEBHOOK_SECRET=your_webhook_secret_change_this_in_production

# JWT Configuration (for future implementation)
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=24h

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=info
